{
  "name": "friday-metrics-bot",
  "version": "1.0.0",
  "description": "MS Teams bot that queries Friday service and displays test metrics with Adaptive Cards",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node lib/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf lib",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "teams",
    "bot",
    "metrics",
    "adaptive cards",
    "azure devops"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "adaptive-expressions": "^4.19.0",
    "adaptivecards": "^2.11.0",
    "adaptivecards-templating": "^2.3.1",
    "axios": "^1.6.2",
    "botbuilder": "^4.19.0",
    "botbuilder-dialogs": "^4.19.0",
    "botframework-connector": "^4.19.0",
    "botframework-schema": "^4.19.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "inversify": "^6.0.2",
    "moment": "^2.29.4",
    "reflect-metadata": "^0.1.13",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "azure-devops-node-api": "^11.2.0",
    "node-cache": "^5.1.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/restify": "^8.5.7",
    "@types/uuid": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}